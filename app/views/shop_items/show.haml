
.wrapper
    .main-content.active
        %h2
            = @shop_item.title
        %h4
            = @shop_item.description
        %p 
            = @shop_item.price
        %p 
            = link_to @shop_item.user.email, user_path(@shop_item.user.id)
        - if @shop_item.shop_item_images.length == 1
            %img{:src => @shop_item.shop_item_images[0].picture_path, :style => "width:400px", class:"image"}
        -else
            %div{id:"carouselExample", class:"carousel slide", :data => {:ride=>"carousel"}}
                .carousel-inner
                    - @shop_item.shop_item_images.each_with_index do |shop_item_image,index|
                        - if index == 0
                            .carousel-item.active 
                                %img{:src => shop_item_image.picture_path,  class:"d-block w-50", alt:"pic-#{shop_item_image.id}"}
                        - else 
                            .carousel-item
                                %img{:src => shop_item_image.picture_path,  class:"d-block w-50", alt:"pic-#{shop_item_image.id}"}

        .buttons2    
            = link_to "Edit" , edit_shop_item_path(@shop_item),class: "btn btn-primary"
            = link_to "Delete", @shop_item, method: "delete", data: {confirm: "Are you sure?"}, class: "btn btn-success"

