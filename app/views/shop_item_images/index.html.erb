<p id="notice"><%= notice %></p>

<h1>Shop Item Images</h1>

<table>
  <thead>
    <tr>
      <th>Shop item</th>
      <th>Picture path</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shop_item_images.each do |shop_item_image| %>
      <tr>
        <td><%= shop_item_image.shop_item_id %></td>
        <td><%= shop_item_image.picture_path %></td>
        <td><%= link_to 'Show', shop_item_image %></td>
        <td><%= link_to 'Edit', edit_shop_item_image_path(shop_item_image) %></td>
        <td><%= link_to 'Destroy', shop_item_image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

