<!DOCTYPE html>
<html>
  <head>
    <title>SalesShop</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-light bg-light">
      <a class="navbar-brand" href="/">My Logo</a>

      <div class="buttons">
        <% if user_signed_in? %>
          <%= link_to('Logout',destroy_user_session_path,method: :delete,:class => "btn btn-outline-primary")%>
          <%= link_to('Edit registration', edit_user_registration_path, :class => "btn btn-primary") %>

        <% else %>
          <%= link_to('Login',new_user_session_path,:class => "btn btn-outline-primary")%>
          <%= link_to('Register', new_user_registration_path,:class => "btn btn-outline-success")  %>

        <% end %>


      </div>
    </nav>

  

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
